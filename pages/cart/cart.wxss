/* pages/cart/cart.wxss */
.revice_address_row .address_btn {
  padding: 20rpx;
}
.revice_address_row .address_btn button {
  width: 60%;
}
.revice_address_row .user_info_row {
  display: flex;
  padding: 20rpx;
}
.revice_address_row .user_info_row .uesr_info {
  flex: 4;
}
.revice_address_row .user_info_row .user_phone {
  flex: 2;
  text-align: right;
}
.cart_title {
  font-size: 32rpx;
  padding: 20rpx;
  border-top: 1px solid var(--themeColor);
  border-bottom: 1rpx solid var(--themeColor);
}
.cart_main .cart_item {
  display: flex;
  padding: 10rpx;
  border-bottom: 1rpx solid #999;
}
.cart_main .cart_item .cart_chk_wrap {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_main .cart_item .cart_img_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_main .cart_item .cart_img_wrap image {
  width: 80%;
}
.cart_main .cart_item .cart_info_wrap {
  flex: 5;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cart_main .cart_item .cart_info_wrap .goods_name {
  color: #555;
  font-size: 24rpx;
  display: -webkit-flex;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.cart_main .cart_item .cart_info_wrap .goods_price_wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.cart_main .cart_item .cart_info_wrap .goods_price_wrap .goods_price {
  color: var(--themeColor);
  font-size: 34rpx;
}
.cart_main .cart_item .cart_info_wrap .goods_price_wrap .goods_num_tool {
  display: flex;
}
.cart_main .cart_item .cart_info_wrap .goods_price_wrap .goods_num_tool .num_edit {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1rpx solid #666;
}
.cart_main .cart_item .cart_info_wrap .goods_price_wrap .goods_num_tool .goods_num {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.foot_tool {
  display: flex;
  position: fixed;
  width: 100%;
  height: 90rpx;
  bottom: 0;
  border-top: 1rpx solid #777;
}
.foot_tool .all_chx_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #666;
  font-size: 24rpx;
}
.foot_tool .total_price_wrap {
  flex: 5;
  text-align: right;
}
.foot_tool .total_price_wrap .total_price {
  padding: 10rpx;
}
.foot_tool .total_price_wrap .total_price .total_price_text {
  color: var(--themeColor);
  font-size: 32rpx;
}
.foot_tool .order_pay_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  color: #fff;
  background-color: var(--themeColor);
}
