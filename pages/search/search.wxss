/* pages/search/search.wxss */
page {
  background-color: #dedede;
  padding: 20rpx;
}
.search_row {
  display: flex;
  height: 70rpx;
}
.search_row input {
  flex: 9;
  height: 100%;
  background-color: #fff;
  margin-right: 20rpx;
  padding-left: 30rpx;
}
.search_row button {
  flex: 1;
  width: 80rpx;
  height: 100%;
  font-size: 28rpx;
  font-weight: 400;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.search_content {
  margin-top: 20rpx;
}
.search_content .search_item {
  font-size: 26rpx;
  background-color: #fff;
  padding: 15rpx 10rpx;
  border-bottom: 1rpx solid #ccc;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
