<!-- pages/search/search.wxml -->
<view class="search_row">
    <input value="{{inpValue}}" placeholder="请输入搜索内容" bindinput="handleInput" />
    <button hidden="{{!isFocus}}" bindtap="handleCancle">取消</button>
</view>
<view class="search_content">
    <navigator url="/pages/goods_detail/goods_detail?goods_id={{item.goods_id}}" class="search_item" wx:for="{{goods}}" wx:key="goods_id">
        {{item.goods_name}}
    </navigator>
</view>