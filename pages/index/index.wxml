<!-- index.wxml -->
<view class="pyg_index">
    <!-- 搜索框 开始 -->
    <SearchInput></SearchInput>
    <!-- 搜索框 结束 -->
    <!-- 轮播图开始 -->
    <view class="index_swiper">
        <!-- 1. swiper 标签存在默认的宽度和高度 100%*150px
        2. image 标签也存在默认的宽度和高度 320px * 240px
        3. 设计图片和轮播图
           1 先看一下原图的高度 750*340
           2 让图片的高度自适应 宽度等于100%
           3 让让swiper 标签的高度变成和图片的高一样即可
        4. 图片标签
        mode属性 渲染方式
        widthFix 让图片标签的宽高和 图片内容的宽高相适应 -->
        <swiper autoplay indicator-dots circular>
            <swiper-item wx:for="{{swiperList}}" wx:key="goods_id">
                <navigator url="/pages/goods_detail/goods_detail?goods_id={{item.goods_id}}">
                    <image mode="widthFix" src="{{item.image_src}}"></image>
                </navigator>
            </swiper-item>
        </swiper>
    </view>
    <!-- 轮播图结束 -->
    <!-- 导航栏开始 -->
    <view class="index_cate">
        <navigator wx:for="{{catesList}}" wx:key="name" url="/pages/category/category" open-type="switchTab">
            <image mode="widthFix" src="{{item.image_src}}"></image>
        </navigator>
    </view>
    <!-- 导航栏结束 -->
    <!-- 楼层开始 -->
    <view class="index_floor">
        <view class="floor_group" wx:for="{{floorList}}" wx:for-item="item1" wx:for-index="index1" wx:key="name">
            <!-- 标题 -->
            <view class="floor_title">
                <image mode="widthFix" src="{{item1.floor_title.image_src}}"></image>
            </view>
            <!-- 内容 -->
            <view class="floor_list">
                <navigator wx:for="{{item1.product_list}}" wx:for-item="item2" wx:for-index="index2" wx:key="name" url="/pages/goods_list/goods_list?name={{item2.name}}">
                    <image mode="{{index2 === 0 ? 'widthFix':'scaleToFill'}}" src="{{item2.image_src}}"></image>
                </navigator>
            </view>
        </view>
    </view>
    <!-- 楼层结束 -->
</view>